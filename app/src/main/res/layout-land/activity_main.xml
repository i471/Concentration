        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".35">

            <Button
                android:id="@+id/try_again"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/new_game"
                android:layout_marginTop="11dp"
                android:text="Try Again"
                tools:layout_editor_absoluteX="277dp"
                tools:layout_editor_absoluteY="27dp"/>

            <Button
                android:id="@+id/end_game"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="19dp"
                android:text="End Game"/>

            <Button
                android:id="@+id/new_game"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/end_game"
                android:layout_below="@+id/try_again"
                android:layout_marginTop="13dp"
                android:text="New Game"
                tools:layout_editor_absoluteX="280dp"
                tools:layout_editor_absoluteY="365dp"/>

            <ToggleButton
                android:id="@+id/musicToggle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/XMLpoints"
                android:layout_alignStart="@+id/end_game"
                android:layout_marginBottom="17dp"
                android:text="MUSIC"/>

            <TextView
                android:id="@+id/XMLpoints"
                android:layout_width="222dp"
                android:layout_height="20dp"
                android:layout_above="@+id/scoreTitle"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="21dp"
                android:text="0"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="39dp"/>

            <TextView
                android:id="@+id/scoreTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_column="0"
                android:layout_row="10"
                android:text="Points: "
                tools:layout_editor_absoluteX="441dp"
                tools:layout_editor_absoluteY="186dp"/>


        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
