            <Button
                android:id="@+id/button20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"/>
        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".85">

            <Button
                android:id="@+id/try_again"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/new_game"
                android:layout_alignBottom="@+id/new_game"
                android:layout_centerHorizontal="true"
                android:text="Try Again"
                tools:layout_editor_absoluteX="277dp"
                tools:layout_editor_absoluteY="27dp"/>

            <Button
                android:id="@+id/end_game"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="24dp"
                android:text="End Game"/>

            <Button
                android:id="@+id/new_game"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/end_game"
                android:layout_alignBottom="@+id/end_game"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="32dp"
                android:text="New Game"
                tools:layout_editor_absoluteX="280dp"
                tools:layout_editor_absoluteY="365dp" />

            <ToggleButton
                android:id="@+id/musicToggle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/XMLpoints"
                android:layout_alignParentEnd="true"
                android:text="MUSIC" />

            <TextView
                android:id="@+id/XMLpoints"
                android:layout_width="222dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/try_again"
                android:layout_marginStart="47dp"
                android:text="0"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="39dp" />

            <TextView
                android:id="@+id/scoreTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/end_game"
                android:layout_alignParentBottom="true"
                android:layout_column="0"
                android:layout_marginEnd="11dp"
                android:layout_row="10"
                android:text="Points: "
                tools:layout_editor_absoluteX="441dp"
                tools:layout_editor_absoluteY="186dp" />

            <EditText
                android:id="@+id/playerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/XMLpoints"
                android:layout_alignParentStart="true"
                android:ems="7"
                android:inputType="textPersonName"
                android:text="Enter Your Name"
                android:visibility="invisible" />

            <Button
                android:id="@+id/SaveName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/XMLpoints"
                android:layout_toStartOf="@+id/musicToggle"
                android:text="Save Name"
                android:visibility="invisible" />


        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
